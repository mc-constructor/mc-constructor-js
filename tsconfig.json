{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": ".",
    "outDir": ".out",
    "target": "ES2018",
    "lib": [
      "ES2020"
    ],
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,

    "baseUrl": ".",
    "paths": {
      "@ts-mc/core": ["./lib/core"],
      "@ts-mc/core/*": ["./lib/core/*"],
      "@ts-mc/*": ["./lib/*"]
    },
    "typeRoots": [
      "./node_modules/@rxjs-stuff/marbles/@types",
      "./node_modules/@types",
      "./lib/common/testing/@types"
    ]
  }
}
